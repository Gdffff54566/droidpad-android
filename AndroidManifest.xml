<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="uk.digitalsquid.droidpad2" android:versionCode="191" android:versionName="1.9.1">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7"/>
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true"/>
	
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<!-- <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>  -->
	<!-- <uses-permission android:name="android.permission.ADD_SYSTEM_SERVICE"></uses-permission>  -->
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
	<uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="App">

		<service android:name="uk.digitalsquid.droidpad2.DroidPadService">
		</service>
		<activity android:icon="@drawable/icon" android:launchMode="singleTop" android:screenOrientation="portrait" android:name="uk.digitalsquid.droidpad2.Buttons" android:excludeFromRecents="true" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
		</activity>
		<activity android:name="uk.digitalsquid.droidpad2.SettingsMenu" android:icon="@drawable/icon" android:launchMode="singleTop" android:label="Settings"></activity>
		<activity android:name="AboutActivity" android:icon="@drawable/icon" android:label="@string/about_title"></activity>
		<activity android:theme="@android:style/Theme.NoTitleBar" android:name=".DroidPad" android:label="@string/app_name">
		    <intent-filter>
		        <action android:name="android.intent.action.MAIN"/>
		        <category android:name="android.intent.category.LAUNCHER"/>
		    </intent-filter>
		</activity>
	</application>
</manifest> 
